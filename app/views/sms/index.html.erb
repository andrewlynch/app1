<h1>Listing sms</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Datetime</th>
    <th>Message</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sms.each do |sm| %>
  <tr>
    <td><%= sm.number %></td>
    <td><%= sm.datetime %></td>
    <td><%= sm.message %></td>
    <td><%= link_to 'Show', sm %></td>
    <td><%= link_to 'Edit', edit_sm_path(sm) %></td>
    <td><%= link_to 'Destroy', sm, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

